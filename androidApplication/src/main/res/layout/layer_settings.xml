<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@null"
    android:scrollbars="horizontal|vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|right">
            <TextView
                android:id="@+id/remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/remove"
                style="@style/SpinnerText"
                android:padding="12dp"
                android:gravity="right"/>

                <TextView
                    android:id="@+id/move_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/move_up"
                    style="@style/SpinnerText"
                    android:padding="12dp"
                    android:gravity="right"/>

                <TextView
                        android:id="@+id/move_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/move_down"
                        style="@style/SpinnerText"
                        android:padding="12dp"
                        android:gravity="right"/>

            <ImageButton
                android:id="@+id/button_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="6dp"
                android:background="@null"
                android:src="@drawable/icon_apply_button"/>

        </LinearLayout>

        <!--<LinearLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="horizontal">-->
            <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="vertical">-->

            <!--</LinearLayout>-->
            <!--&lt;!&ndash; 1&ndash;&gt;-->
            <!--&lt;!&ndash; 2&ndash;&gt;-->
        <!--</LinearLayout>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/layer_name"
            android:layout_width="72dp"
            android:layout_height="match_parent"
            android:gravity="left|top"
            android:text="@string/layer_name"
            android:visibility="visible"
            style="@style/CaptionText"/>

        <EditText
            android:id="@+id/layer_name_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/layer_name"
            android:layout_weight="1"
            style="@style/DefaultText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/layer_location"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="left|top"
                style="@style/CaptionText"
                android:text="@string/layer_location"

                />
            <Spinner
                android:id="@+id/location_type_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:visibility="gone"
                tools:listitem="@layout/item_spinner"/>

            <EditText
                android:id="@+id/layer_location_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/layer_location"
                android:layout_weight="3"
                style="@style/DefaultText" />
            <ImageView
                android:id="@+id/file_present_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/project_mark"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/layer_type"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="left|top"
                style="@style/CaptionText"
                android:text="@string/layer_type"/>

            <Spinner
                android:id="@+id/layer_type_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"
                tools:text="type"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="1dp"
            android:background="@drawable/panel_border_small">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">
            <TextView
                android:id="@+id/layer_zoom"
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="left|top"
                style="@style/CaptionText"
                android:text="@string/layer_zoom"/>
            <Spinner
                android:id="@+id/zoom_type_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ratio"
                style="@style/CaptionText"
                android:gravity="right"/>
            <Spinner
                android:id="@+id/ratio_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                style="@style/CaptionText"
                android:gravity="right"/>
            <Spinner
                android:id="@+id/zoom_min_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to"
                style="@style/CaptionText"
                android:gravity="right"/>
            <Spinner
                android:id="@+id/zoom_max_edit"
                style="@style/ProfileSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                tools:listitem="@layout/item_spinner"/>


        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/range_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/panel_border_small"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="72dp"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    style="@style/CaptionText"
                    android:text="@string/layer_range"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/from"
                    style="@style/CaptionText"
                    android:gravity="right"/>
                <Spinner
                    android:id="@+id/range_from"
                    style="@style/ProfileSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/item_spinner"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/to"
                    style="@style/CaptionText"
                    android:gravity="right"/>
                <Spinner
                    android:id="@+id/range_to"
                    style="@style/ProfileSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown"
                    tools:listitem="@layout/item_spinner"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/color_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/panel_border_small"
            android:orientation="horizontal">
            <TextView
                android:layout_width="72dp"
                android:layout_height="match_parent"
                android:gravity="left|top"
                style="@style/CaptionText"
                android:text="@string/layer_colors"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fill_color"
                style="@style/CaptionText"
                android:gravity="right"/>
            <View
                android:id="@+id/fill_color"
                android:layout_marginRight="24dp"
                android:layout_width="48dp"

                android:layout_height="48dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/stroke_color"
                style="@style/CaptionText"
                android:gravity="right"/>
            <View
                android:id="@+id/stroke_color"
                android:layout_width="48dp"
                android:layout_height="48dp"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
